<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.HomeActivity"
    android:background="@color/white"
    android:id="@+id/main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/man"
                app:civ_border_width="5px"
                app:civ_border_color="@color/orange"/>

            <TextView
                android:id="@+id/logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/sora_regular"
                android:textSize="@dimen/smallest"
                android:textColor="@color/orange"/>

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:fadeScrollbars="true"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/guest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hello_guest"
                    android:textColor="@color/black"
                    android:fontFamily="@font/sora_semi_bold"
                    android:textSize="@dimen/big"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/automated"
                    android:textColor="@color/gray"
                    android:fontFamily="@font/sora_light"
                    android:textSize="@dimen/smaller"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Choose from the 3 options"
                    android:textColor="@color/black"
                    android:fontFamily="@font/sora_medium"
                    android:textSize="@dimen/smaller"
                    android:layout_marginTop="30dp"
                    android:gravity="center"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <LinearLayout
                        android:id="@+id/mal"
                        android:layout_width="62dp"
                        android:layout_height="62dp"
                        android:orientation="vertical"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/tub">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/ma"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:cardCornerRadius="10dp"
                            android:layout_margin="5dp"
                            app:cardBackgroundColor="@color/marron">

                            <LinearLayout
                                android:layout_width="50dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:src="@drawable/cancer" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sora_regular"
                        android:textSize="@dimen/smallest"
                        android:textColor="@color/gray"
                        android:text="Detection"
                        app:layout_constraintTop_toBottomOf="@id/mal"
                        app:layout_constraintStart_toStartOf="@id/mal"
                        app:layout_constraintEnd_toEndOf="@id/mal"
                        android:layout_marginTop="5dp"/>

                    <LinearLayout
                        android:id="@+id/tub"
                        android:layout_width="62dp"
                        android:layout_height="62dp"
                        android:orientation="vertical"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/mal"
                        app:layout_constraintEnd_toStartOf="@id/can">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/tb"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:cardCornerRadius="10dp"
                            android:layout_margin="5dp"
                            app:cardBackgroundColor="@color/blue">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:src="@drawable/gallery"/>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sora_regular"
                        android:textSize="@dimen/smallest"
                        android:textColor="@color/gray"
                        android:text="Slides"
                        app:layout_constraintTop_toBottomOf="@id/tub"
                        app:layout_constraintStart_toStartOf="@id/tub"
                        app:layout_constraintEnd_toEndOf="@id/tub"
                        android:layout_marginTop="5dp"/>

                    <LinearLayout
                        android:id="@+id/can"
                        android:layout_width="62dp"
                        android:layout_height="62dp"
                        android:orientation="vertical"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/tub">

                        <androidx.cardview.widget.CardView
