<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="10dp"
        android:fadeScrollbars="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sora_semi_bold"
                android:gravity="center"
                android:text="Slide name"
                android:textColor="@color/black"
                android:textSize="@dimen/bigger" />

            <TextView
                android:id="@+id/subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/sora_regular"
                android:text="Please name the slide from which the image has been taken"
                android:textColor="@color/black"
                android:textSize="@dimen/small" />

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/images"
                android:visibility="gone"
                android:textColor="@color/gray"
                android:textSize="@dimen/smaller"/>

            <EditText
                android:id="@+id/slideName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:background="@drawable/primary_edit_text"
                android:layout_marginTop="10dp"
                android:textSize="@dimen/smaller"
                android:hint="Enter Slide Name"
                android:fontFamily="@font/sora_regular"
                android:textColorHint="@color/gray"
                android:inputType="text"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/reason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/another"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="@font/sora_regular"
                    android:text="Please select reason why its a bad slide"
                    android:textColor="@color/black"
                    android:textSize="@dimen/small" />

                <LinearLayout
                    android:id="@+id/checks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="10dp"/>

                <EditText
                    android:id="@+id/reason_edit"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:background="@drawable/primary_edit_text"
                    android:layout_marginTop="10dp"
                    android:textSize="@dimen/smaller"
                    android:hint="Enter your reason"
                    android:fontFamily="@font/sora_regular"
                    android:textColorHint="@color/gray"
                    android:inputType="text"/>

            </LinearLayout>



            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Save"
                    android:id="@+id/btn_save"
                    android:fontFamily="@font/sora_medium"
                    android:textSize="@dimen/big"
                    android:enabled="true"
                    android:textColor="@color/white"
                    android:layout_marginBottom="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>